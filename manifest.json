{
  "name": "Apply flags to the selected elements.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.js", "md5.js", "settings.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
  	"scripts": ["background.js"]
  },
  "page_action" : {
    "default_icon" : "icon.png",
    "default_title" : "PageDaddy",
    "default_popup": "page_action.html"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
